<view class='date-item' wx:for="{{futureWeathers}}" wx:key="">
  <view class="date-wrapper">
    <view class="day">{{item.day}}</view>
    <view class="date">{{item.data}}</view>
  </view>
  <view class="temp">{{item.tempRange}}</view>
  <image class="weather-icon" src="{{item.weatherIcon}}"></image>
</view>